<div class="not-card not-card1">
<h1 class="float-left">Posts</h1>
<div class="table-responsive">
<br>
<table  id="table_id" class="table">
<thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Posted User</th>
    <th>Created At</th>
    <th>Operations</th>
    </tr>
</thead>
<tbody>
<% @posts.each do |post| %>
    <tr>
    <td><%= link_to post.title, post_path(post), {:remote => true, 'data-toggle' =>  "modal"} %></td>
    <td><%= post.description %></td>
    <td><%= post.created_user.name %></td>
    <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
    <td>  
    <%= link_to "Delete", post_path(post.id), class: 'btn button1 button2',
    method: :delete,
    data: { confirm: "Are you sure to delete this post?" } %>
    </td>
    </tr>
    <% end %>
</tbody>

</table>
</div>
<div id="postDetail" class="modal fade" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="width:700px"></div>
  </div>
</div>
</div>


