<div class="modal-header">
<h5 class="modal-title" id="exampleModalLabel">Post Detail</h5>
<button type="button" class="close" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>
</div>
<div class="modal-body">
	<form>
      	<div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Title:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.title  %></label>
            </div>
        </div>
      	<div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Description:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.description  %></label>
            </div>
        </div>
      	<div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Status:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.status == 1  ? 'Active' : 'Inactive' %></label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Posted at:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.created_at.strftime('%Y/%m/%d') %></label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Posted User:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.created_user.name %></label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Updated at:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.updated_at.strftime('%Y/%m/%d') %></label>
            </div>
        </div><div class="form-group row">
            <label class="col-sm-4 col-form-label"><strong>Updated User:</strong></label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.updated_user.name %></label>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>