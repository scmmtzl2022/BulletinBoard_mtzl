<%= form_with model: @user do |form| %>
  <div class="form-group form-wrapper">
    <h1>Create New User</h1>
      <div>
        <%= form.label :name, class:" col-form-label" %>
        <%= form.text_field :name, class:"form-control" %>
        <% if @user.errors[:name].any? %>
          <span style="color:red;">Name <%= @user.errors[:name][0] %>
        <% end %>
      </div>
    
      <div>
        <%= form.label :email_address, class:" col-form-label" %>
        <%= form.text_field :email, class:"form-control" %>
        <% if @user.errors[:email].any? %>
          <span style="color:red;">Email <%= @user.errors[:email][0] %>
        <% end %>
      </div>
    
      <div>
        <%= form.label :password, class:" col-form-label" %>
        <%= form.password_field :password, class:"form-control" %>
        <% if @user.errors[:password].any? %>
          <span style="color:red;">Passsword <%= @user.errors[:password][0] %>
        <% end %>
      </div>
    
      <div>
        <%= form.label :confirm_password, class:" col-form-label" %>
        <%= form.password_field :password_confirmation, class:"form-control" %>
        <% if @user.errors[:password_confirmation].any? %>
          <span style="color:red;">Passsword Confirmation <%= @user.errors[:password_confirmation][0] %>
        <% end %>
      </div>

      <% if admin? %>

      <div>
        <%= form.label :Role, class:" col-form-label" %>
        <%= form.select(:role, options_for_select([0,1]))%>
      </div>

      <% end %>

    
      <div>
        <%= form.label :phone, class:" col-form-label" %>
        <%= form.text_field :phone, class:"form-control" %>
        <% if @user.errors[:phone].any? %>
          <span style="color:red;">phone <%= @user.errors[:phone][0] %>
        <% end %>
      </div>
    
      <div>
        <%= form.label :date_of_birth, class:" col-form-label" %>
        <%= form.date_field :dob, class:"form-control" %>
        <% if @user.errors[:dob].any? %>
          <span style="color:red;">Date Of Birth <%= @user.errors[:dob][0] %>
        <% end %>
      </div>
    
      <div>
        <%= form.label :address, class:" col-form-label" %>
        <%= form.text_area :address, class:"form-control" %>
        <% if @user.errors[:address].any? %>
          <span style="color:red;">Address <%= @user.errors[:address][0] %>
        <% end %>
      </div>
    
        <div>
        <%= form.label :profile, class:" col-form-label" %>
        <%= form.file_field :profile, :accept => "image/x-png,image/gif,image/jpeg", class:"form-control" %>
        <% @user.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    
      <%= form.submit "Done", class:"btn button1 mv-20" %>
      <%= link_to 'Back', users_path, class:"btn button1 button2 mv-20" %>
    </div>
    
  <% end %>