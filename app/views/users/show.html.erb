<div class="wrapper not-card not-card1">
  <h1 class="mv-20">User Detail</h1>
    <div class="row">
        <div class="col-4">
                <div class="form-group">
                
                </div>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Name:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.name  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Type:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.role == "0" ? 'Admin' : 'User'  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Email:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.email  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Phone:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.phone  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Date of Birth:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.dob  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Address:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.address  %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Created Date:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.created_at.strftime('%Y/%m/%d') %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Created User:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.created_user.name %></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"><strong>Updated date:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.updated_at.strftime('%Y/%m/%d') %></label>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-4 col-form-label"><strong>Updated User:</strong></label>
                <div class="col-sm-8">
                    <label class="col-sm-10 col-form-label"><%= @user.updated_user.name %></label>
                </div>
            </div>
        </div>
    </div>
</div>